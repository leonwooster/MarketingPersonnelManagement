@page
@model CompanyA.WebUI.Pages.SalesModel
@{
    ViewData["Title"] = "Sales Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-graph-up"></i> Sales Management</h2>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary active" id="gridViewBtn">
                        <i class="bi bi-table"></i> Grid View
                    </button>
                    <button type="button" class="btn btn-outline-primary" id="chartViewBtn">
                        <i class="bi bi-bar-chart"></i> Chart View
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Personnel Selection -->
    <div class="row mb-3">
        <div class="col-md-4">
            <label for="personnelSelect" class="form-label">Select Personnel:</label>
            <select class="form-select" id="personnelSelect">
                <option value="">Loading personnel...</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="dateFrom" class="form-label">From Date:</label>
            <input type="date" class="form-control" id="dateFrom">
        </div>
        <div class="col-md-3">
            <label for="dateTo" class="form-label">To Date:</label>
            <input type="date" class="form-control" id="dateTo">
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button class="btn btn-primary w-100" id="loadSalesBtn">
                <i class="bi bi-search"></i> Load Sales
            </button>
        </div>
    </div>

    <!-- Add Sales Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Sales Record</h5>
                </div>
                <div class="card-body">
                    <form id="addSalesForm">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="salesPersonnelId" class="form-label">Personnel:</label>
                                <select class="form-select" id="salesPersonnelId" required>
                                    <option value="">Select Personnel</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="salesDate" class="form-label">Sales Date:</label>
                                <input type="date" class="form-control" id="salesDate" required>
                            </div>
                            <div class="col-md-3">
                                <label for="salesAmount" class="form-label">Sales Amount:</label>
                                <input type="number" class="form-control" id="salesAmount" step="0.01" min="0" required>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-plus"></i> Add Sales
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Grid View -->
    <div id="gridView" class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-table"></i> Sales Records</h5>
                    <span id="salesCount" class="badge bg-primary">0 records</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Personnel</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="salesTableBody">
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        <i class="bi bi-info-circle"></i> Select personnel to load sales records
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart View -->
    <div id="chartView" class="row" style="display: none;">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Sales Visualization</h5>
                </div>
                <div class="card-body">
                    <canvas id="salesChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Indicator -->
    <div id="loadingIndicator" class="text-center" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading sales data...</p>
    </div>
</div>

@section Scripts {
    <script src="~/js/config.js"></script>
    <script src="~/js/api-client.js"></script>
    <script src="~/js/sales-manager.js"></script>
}
